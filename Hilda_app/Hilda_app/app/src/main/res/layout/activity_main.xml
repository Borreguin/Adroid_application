<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roberto.hilda_app.Nuevo_Cliente">

    <TextView
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:text="0"
        android:id="@+id/textViewCount"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/buttonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:layout_below="@+id/textViewCount"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCount"
        app:layout_constraintLeft_toLeftOf="@+id/textViewCount"
        app:layout_constraintRight_toRightOf="@+id/textViewCount"
        app:layout_constraintHorizontal_bias="0.51" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Reset"
        android:layout_below="@+id/buttonClick"
        android:layout_alignLeft="@+id/buttonClick"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonClick"
        app:layout_constraintLeft_toLeftOf="@+id/buttonClick"
        app:layout_constraintRight_toRightOf="@+id/buttonClick" />

    <Button
        android:id="@+id/btn_newClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Nuevo Cliente"
        android:onClick="gotoNewClient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset" />


</android.support.constraint.ConstraintLayout>
